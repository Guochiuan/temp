<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="409dp"
            android:layout_height="729dp" tools:layout_editor_absoluteX="1dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:inputType="textPersonName"
                android:text="Converter Miles-Km"
                android:ems="10"
                android:id="@+id/editTextTextPersonName3" android:textSize="30sp" android:textAlignment="center"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="62dp">
            <EditText
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Convert from"
                    android:ems="10"
                    android:id="@+id/editTextTextPersonName5" android:layout_weight="1"/>
            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:orientation="horizontal">
                <RadioButton
                        android:text="Km"
                        android:layout_width="92dp"
                        android:layout_height="wrap_content" android:id="@+id/rbFromKm" android:checked="true"
                        android:onClick="handleClick"/>
                <RadioButton
                        android:text="Mile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/rbFromMiles" android:checked="false"
                        android:onClick="handleClick"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="59dp">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Value"
                    android:ems="10"
                    android:id="@+id/editTextTextPersonName6" android:layout_weight="1"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/value" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Result"
                    android:ems="10"
                    android:id="@+id/editTextTextPersonName7" android:layout_weight="1"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/result" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp">
            <Button
                    android:text="CONVERT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonConvert" android:layout_weight="1"
                    android:onClick="handleClick"/>
            <Button
                    android:text="RESET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonReset" android:layout_weight="1"
                    android:onClick="handleClick"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>